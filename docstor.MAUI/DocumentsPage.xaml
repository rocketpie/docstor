<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="docstor.MAUI.DocumentsPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewModel="clr-namespace:docstor.MAUI.ViewModel"
    Title="DocumentsPage">
    <ContentPage.BindingContext>
        <viewModel:DocumentsPageViewModel />
    </ContentPage.BindingContext>
    <VerticalStackLayout>
        <Label
            HorizontalOptions="Center"
            Text="your documents"
            VerticalOptions="Start" />

        <ListView x:Name="DocumentList" ItemsSource="{Binding Documents}" />

        <Button
            x:Name="AddDocument"
            Clicked="AddDocument_Clicked"
            HorizontalOptions="Center"
            Text="Add document"
            VerticalOptions="End" />

        <Button
            x:Name="TakePhoto"
            Clicked="TakePhoto_Clicked"
            HorizontalOptions="Center"
            Text="Take photo"
            VerticalOptions="End" />

    </VerticalStackLayout>
</ContentPage>